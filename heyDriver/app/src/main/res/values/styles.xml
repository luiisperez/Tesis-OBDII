<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- heyDriver application theme. -->
    <style name="HeyDriverTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/heyDriverLightGreen</item>
        <item name="colorPrimaryDark">@color/heyDriverDarkGreen</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="HeyDriverTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeyDriverTheme.NoActionBarLogin">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeyDriverTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="HeyDriverTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
